# ===================================
# QuickChat Environment Variables
# ===================================
# Copy this file to .env.local and fill in your actual values
#
# NOTE: Frontend variables must start with VITE_
# Backend variables (Vercel functions) can be any name

# ===================================
# STRIPE PAYMENT INTEGRATION
# ===================================
# Feature Flag: Set to "false" to disable Stripe and use mock payments for testing
# When disabled, questions are created without actual payment processing
STRIPE_ENABLED=false

# Stripe Secret Key (Backend only - NEVER commit the real key!)
# Get from: https://dashboard.stripe.com/apikeys
# Use test key (sk_test_...) for development
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Public Key (Frontend)
# Get from: https://dashboard.stripe.com/apikeys
# Use test key (pk_test_...) for development
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# ===================================
# XANO API (Database)
# ===================================
XANO_BASE_URL=https://your-workspace.xano.io/api:your_api_group
XANO_PUBLIC_API_URL=https://your-workspace.xano.io/api:your_public_api
XANO_INTERNAL_API_KEY=your_internal_api_key

# ===================================
# AUTHENTICATION
# ===================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ===================================
# EMAIL (ZeptoMail)
# ===================================
ZEPTOMAIL_TOKEN=your_zeptomail_token
ZEPTOMAIL_FROM_EMAIL=noreply@yourdomain.com
ZEPTOMAIL_FROM_NAME=QuickChat

# ===================================
# CLOUDFLARE
# ===================================
# Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
VITE_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Cloudflare Stream (Video)
CLOUDFLARE_STREAM_API_TOKEN=your_stream_api_token

# Cloudflare R2 (Storage)
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name

# ===================================
# AI FEATURES (Google Gemini)
# ===================================
LLM_PROVIDER=gemini
GOOGLE_AI_API_KEY=your_gemini_api_key

# ===================================
# APPLICATION URLS
# ===================================
CLIENT_PUBLIC_ORIGIN=http://localhost:5173
# For production: https://yourdomain.com

# ===================================
# CRON JOBS (Vercel)
# ===================================
CRON_SECRET=your_cron_secret_for_vercel
